<script>
  document.addEventListener('DOMContentLoaded', () => {
    const cartButtons = document.querySelectorAll('.btn-add-to-cart');

    cartButtons.forEach(button => {
      const courseId = button.dataset.courseId;
      const courseTitle = button.dataset.courseTitle;
      const cartData = {
        id: courseId,
        title: courseTitle,  // Include the title in the cart data
        quantity: 1,
      };

      // Check if item is in the cart
      const cartItems = JSON.parse(localStorage.getItem('cartItems')) || [];
      const isInCart = cartItems.some(item => item.id === courseId);

      // Update button text based on whether item is in the cart
      if (isInCart) {
        button.innerHTML = 'X Remove from Cart';
        button.classList.remove('btn-outline-primary');
        button.classList.add('btn-outline-danger');
      } else {
        button.innerHTML = '<i class="fa fa-shopping-cart"></i> Add to Cart';
        button.classList.remove('btn-outline-danger');
        button.classList.add('btn-outline-primary');
      }

      // Handle button click
      button.addEventListener('click', () => {
        const cartItems = JSON.parse(localStorage.getItem('cartItems')) || [];
        const itemIndex = cartItems.findIndex(item => item.id === courseId);

        if (itemIndex > -1) {
          // Remove item from cart
          cartItems.splice(itemIndex, 1);
          button.innerHTML = '<i class="fa fa-shopping-cart"></i> Add to Cart';
          button.classList.remove('btn-outline-danger');
          button.classList.add('btn-outline-primary');
        } else {
          // Add item to cart
          cartItems.push(cartData);
          button.innerHTML = 'X Remove from Cart';
          button.classList.remove('btn-outline-primary');
          button.classList.add('btn-outline-danger');
        }

        // Update localStorage
        localStorage.setItem('cartItems', JSON.stringify(cartItems));

        // Trigger a custom event to update the cart quantity in other parts
        const event = new CustomEvent('cartUpdated');
        window.dispatchEvent(event);
      });
    });
  });
</script>