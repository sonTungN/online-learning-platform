<html lang="en">
<head>
  {{> headTag}}

  <!-- Include additional styles passed as variables -->
  {{#each styles}}
    <link rel="stylesheet" href="/css/{{this}}"/>
  {{/each}}

  <title>{{title}}</title>
</head>

<body>
  <!-- Include header partial (e.g., the navbar) -->
  <header>
    {{> nav-bar}}
  </header>

  <!-- Main content area -->
  <main>
    {{{body}}}
  </main>

  <footer>
    {{> footer}}
  </footer>

  <!-- Include additional scripts passed as variables -->
  {{#each scripts}}
    <script src="/js/{{this}}"></script>
  {{/each}}

  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>
