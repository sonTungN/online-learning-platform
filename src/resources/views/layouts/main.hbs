<html lang="en">

<head>
  {{> headTag}}

  <!-- Include additional styles passed as variables -->
  {{#each styles}}
  <link rel="stylesheet" href="/css/{{this}}" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  {{/each}}

  <title>{{title}}</title>
</head>

<body>
  <!-- Include header partial (e.g., the navbar) -->
  <header style=" top: 0;
  left: 0;
  position: sticky;
  z-index:50">
    {{> nav-bar}}
  </header>

  <!-- Main content area -->
  <main style="min-height: 100vh">
    {{{body}}}
  </main>

  <footer>
    {{> footer}}
  </footer>

  <!-- Include additional scripts passed as variables -->
  {{#each scripts}}
  <script src="/js/{{this}}"></script>
  {{/each}}

  <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>

</html>