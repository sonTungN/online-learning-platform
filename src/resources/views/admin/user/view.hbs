<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="<%= locals.description %>">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<div class="container">
  <!-- User Details -->
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">User Profile: {{firstName}} {{lastName}}</h1>
  </div>

  <ul class="list-group">
    <!-- Dynamic Content -->
    <li class="list-group-item">
      <div class="row">
        <div class="col-3"><b>Name:</b></div>
        <div class="col">{{firstName}} {{lastName}}</div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-3"><b>Phone Number:</b></div>
        <div class="col">{{phone}}</div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-3"><b>Email:</b></div>
        <div class="col">{{email}}</div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-3"><b>Address:</b></div>
        <div class="col">{{address}}, {{city}}</div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-3"><b>Zipcode:</b></div>
        <div class="col">
          {{zipCode}}
        </div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-3"><b>Account Type:</b></div>
        <div class="col">{{accountType}}</div>
      </div>
    </li>
  </ul>
</div>